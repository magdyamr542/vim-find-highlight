{
  "name": "vim-find-highlight",
  "displayName": "vim-find-highlight",
  "publisher": "AmrMetwally",
  "icon": "images/icon.png",
  "repository": {
    "url": "https://github.com/magdyamr542/vim-find-highlight"
  },
  "description": "highlighting the chars to reach words with vim find command",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "vimFindHighlight",
      "properties": {
        "vimFindHighlight.charPrimaryColor": {
          "type": "string",
          "default": "red",
          "description": "The color of the char that can be reached with the f motion within one jump"
        },
        "vimFindHighlight.charSecondaryColor": {
          "type": "string",
          "default": "green",
          "description": "The color of the char that can be reached with the f motion with more than one jump"
        },
        "vimFindHighlight.charFontWeight": {
          "type": "string",
          "default": "400",
          "description": "The font weight of the char that can be reached with the f motion",
          "enum": [
            "100",
            "200",
            "300",
            "400",
            "500",
            "600",
            "700",
            "800",
            "900"
          ]
        },
        "vimFindHighlight.enableUnderline": {
          "type": "boolean",
          "default": true,
          "description": "If true, a line will be drawn under the highlighted characters"
        },
        "vimFindHighlight.enableAutoHighlight": {
          "type": "boolean",
          "default": true,
          "description": "If true, the extension will automatically highlight the characters that can be reached with the f motion"
        }
      }
    },
    "commands": [
      {
        "command": "vimFindHighlight.toggleAuthoHighlight",
        "title": "Toggle Auto Highlight"
      },
      {
        "command": "vimFindHighlight.highlightCharacters",
        "title": "Highlight Characters"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "compile": "webpack",
    "prepare-deployment": "npx vsce package",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "20.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "esbuild": "^0.21.3",
    "eslint": "^9.2.0",
    "glob": "^10.3.15",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "vscode-test": "^1.5.2",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "@vscode/vsce": "2.26.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
